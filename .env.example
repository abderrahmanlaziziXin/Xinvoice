# Environment Variables for Xinvoice
# Copy to .env.local for local development

# Choose your LLM provider: "openai" or "gemini"
LLM_PROVIDER=openai

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://www.xinfinitylabs.com
NEXT_PUBLIC_SITE_NAME="Xinvoice"
NEXT_PUBLIC_SITE_DESCRIPTION="AI-Powered Document Generation Platform"

# API Keys
OPENAI_API_KEY=your-openai-api-key-here
GEMINI_API_KEY=your-gemini-key-here

# SEO Configuration
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=""
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="AW-17553744861"
NEXT_PUBLIC_GOOGLE_SEARCH_CONSOLE_ID=""

# Social Media
NEXT_PUBLIC_TWITTER_HANDLE="@xinvoice"
NEXT_PUBLIC_FACEBOOK_PAGE=""
NEXT_PUBLIC_LINKEDIN_COMPANY=""

# Features Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_STRUCTURED_DATA=true
NEXT_PUBLIC_ENABLE_OG_IMAGES=true

# Contact Information
NEXT_PUBLIC_SUPPORT_EMAIL="support@xinfinitylabs.com"
NEXT_PUBLIC_LEGAL_EMAIL="legal@xinfinitylabs.com"
NEXT_PUBLIC_PRIVACY_EMAIL="privacy@xinfinitylabs.com"

